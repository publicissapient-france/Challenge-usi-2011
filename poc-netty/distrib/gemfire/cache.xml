<!DOCTYPE cache PUBLIC
        "-//GemStone Systems, Inc.//GemFire Declarative Caching 6.5//EN"
        "http://www.gemstone.com/dtd/cache6_5.dtd">
<cache>

    <region name="user-region">
        <region-attributes
                data-policy="persistent-replicate"
                scope="distributed-ack">
            <disk-write-attributes
                    roll-oplogs="true"
                    max-oplog-size="10">
                <synchronous-writes/>
            </disk-write-attributes>
            <disk-dirs>
                <disk-dir>gemfire-persistence/oplogDir1</disk-dir>
                <disk-dir>gemfire-persistence/oplogDir2</disk-dir>
                <disk-dir>gemfire-persistence/dbDir</disk-dir>
            </disk-dirs>
        </region-attributes>
    </region>

    <region name="game-region">
        <region-attributes data-policy="replicate" scope="distributed-ack"/>
    </region>
    <region name="question-region">
        <region-attributes data-policy="replicate" scope="distributed-ack"/>
    </region>
    <region name="player-region">
        <region-attributes data-policy="replicate" scope="distributed-ack"/>
    </region>
    <region name="score-region">
        <region-attributes data-policy="replicate" scope="distributed-no-ack"/>
    </region>
    <region name="current-question-region">
        <region-attributes data-policy="replicate" scope="distributed-no-ack"/>
    </region>
    <region name="inverse-score-region">
        <region-attributes data-policy="replicate" scope="distributed-ack"/>
    </region>
    <region name="ranking-region">
        <region-attributes data-policy="replicate" scope="distributed-ack"/>
    </region>
    <region name="final-ranking-region">
        <region-attributes data-policy="replicate" scope="distributed-ack"/>
    </region>
    <!-- Ranking NodeStore -->
    <region name="score-store-region">
        <region-attributes data-policy="replicate" scope="distributed-ack"/>
    </region>
    <!-- Created by API -->
